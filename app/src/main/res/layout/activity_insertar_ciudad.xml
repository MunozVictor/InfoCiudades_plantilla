<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.jairobilbao.infociudades.InsertarCiudad">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nombreLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Introduce nombre de la ciudad"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/provinciaLabel"
        android:layout_below="@+id/nombreLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Introduce provincia"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/poblacionLabel"
        android:layout_below="@+id/provinciaLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Introduce nÂº de habitantes"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introducir datos"
        android:id="@+id/botonInsert"
        android:layout_below="@+id/poblacionLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="insertarCiudad"/>
</RelativeLayout>
